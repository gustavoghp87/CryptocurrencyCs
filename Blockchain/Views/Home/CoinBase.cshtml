@{
    ViewData["Title"] = "CoinBase";
    Layout = "_Layout";
}

<div class="container-fluid">
    <h2> CoinBase </h2>
    @{ 
        var blocks = ViewBag.Blocks as List<Block>;
    }
    <div class="row row-horizon">
        @{ 
            int j = 1;
        }
        @foreach (var block in blocks)
        {
            <div class="col-xs-7" style="">
                <div id="block1chain1well" class="card m-3" style="background-color: rgb(41 246 157 / 0.65);">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="block1chain1number" class="col-sm-2 control-label"> Block: </label>
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <spam class="input-group-addon"> # </spam>
                                    <input id="block1chain1number" type="text" value="@block.Index" onkeyup="updateChain(1, 1);" class="form-control" />
                                    <input id="block1chain1tx0time" type="text" value="@block.Timestamp" onkeyup="updateChain(1, 1);" class="form-control" />
                                    <input id="block1chain1tx0prev" type="text" value="@block.PreviousHash" onkeyup="updateChain(1, 1);" class="form-control" />
                                    <input id="block1chain1tx0prev" type="text" value="@block.Hash" onkeyup="updateChain(1, 1);" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="block1chain1nonce" class="col-sm-2 control-label"> Nonce </label>
                            <div class="col-sm-10">
                                <input id="block1chain1nonce" type="text" value="@block.Nonce" onkeyup="updateChain(1, 1);" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="block1chain1tx0value" class="col-sm-2 control-label"> Tx </label>
                            <div class="col-sm-10">
                                @foreach (var item in block.Transactions)
                                {
                                <div class="input-group">
                                    <div class="input-group-addon"> $ </div>
                                    <input id="block1chain1tx0value" type="text" value="@item.Amount" onkeyup="updateChain(1, 1);" class="form-control" />
                                    <div class="input-group-addon"> From: </div>
                                    <input id="block1chain1tx0from" type="text" value="@item.Sender" />
                                    <div class="input-group-addon"> ->: </div>
                                    <input id="block1chain1tx0to" type="text" value="@item.Recipient" onkeyup="updateChain(1, 1);" class="form-control" />
                                </div>
                                    j++;
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</div>